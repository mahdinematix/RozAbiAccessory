@using _01_Framework.Application
@using _01_Framework.Infrastructure
@inject IAuthHelper AuthHelper
@{
    var accountInfo = AuthHelper.GetAccountInfo();
}

<div class="left side-menu">
    <div class="sidebar-inner slimscrollleft">
        <div class="user-details">
            <div class="pull-right">
                <img src="~/Pictures/@accountInfo.ProfilePhoto" alt="" class="thumb-md img-circle">
            </div>
            <div class="user-info">
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@accountInfo.Fullname<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="javascript:void(0)"><i class="md md-face-unlock"></i> Profile<div class="ripple-wrapper"></div></a></li>
                        <li><a href="javascript:void(0)"><i class="md md-settings"></i> Settings</a></li>
                        <li><a href="javascript:void(0)"><i class="md md-lock"></i> Lock screen</a></li>
                        <li><a href="javascript:void(0)"><i class="md md-settings-power"></i> Logout</a></li>
                    </ul>
                </div>

                <p class="text-muted m-0">@accountInfo.Role</p>
            </div>
        </div>
        <!--- Divider -->
        <div id="sidebar-menu">
            <ul>
                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator)
                {
                    <li><a asp-page="/Inventory/Index" class="waves-effect"><i class="md md-home"></i><span> انبارداری </span></a></li>

                }
                <li><a asp-page="/Index" class="waves-effect active"><i class="md md-home"></i><span> داشبورد </span></a></li>

                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator)
                {
                    <li class="has_sub">
                        <a class="waves-effect"><i class="md md-mail"></i><span> فروشگاه </span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Shop/Slide/Index">اسلایدر</a></li>
                            <li><a asp-page="/Shop/ProductCategory/Index">گروه محصولات</a></li>
                            <li><a asp-page="/Shop/Product/Index">محصولات</a></li>
                            <li><a asp-page="/Shop/ProductPicture/Index">عکس محصولات</a></li>
                            <li><a asp-page="/Shop/Order/Index">سفارشات</a></li>
                        </ul>

                    </li>
                }


                <li><a asp-page="/Comment/Index" class="waves-effect"><i class="md md-home"></i><span> کامنت ها </span></a></li>
                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator)
                {
                    <li class="has_sub">
                        <a class="waves-effect"><i class="md md-mail"></i><span> مدیریت سیستم تخفیفات </span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Discount/CustomerDiscount/Index">تخفیف مشتری</a></li>
                            <li><a asp-page="/Discount/ColleagueDiscount/Index">تخفیف همکاری</a></li>
                        </ul>
                    </li>
                }

                

                <li class="has_sub">
                    <a class="waves-effect"><i class="md md-mail"></i><span> مدیریت مقالات </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Blog/ArticleCategory/Index">گروه مقالات</a></li>
                        <li><a asp-page="/Blog/Article/Index">مقالات</a></li>
                    </ul>
                </li>
                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator)
                {
                    <li class="has_sub">
                        <a class="waves-effect"><i class="md md-mail"></i><span> مدیریت کاربران </span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Accounts/Account/Index">کاربران</a></li>
                            <li><a asp-page="/Accounts/Role/Index">نقش ها</a></li>
                        </ul>
                    </li>
                }
                
                <li><a asp-page="/Account" asp-page-handler="Logout" class="waves-effect active"><i class="fa fa-sign-out"></i><span> خروج </span></a></li>
                
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>